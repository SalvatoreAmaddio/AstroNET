<Window x:Class="AstroNET.View.LoadingForm"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:AstroNET.View"
            xmlns:fr="clr-namespace:FrontEnd.Forms;assembly=FrontEnd"
            mc:Ignorable="d"
            ResizeMode="NoResize"
            WindowStartupLocation="CenterScreen"
            Icon="pack://application:,,,/assets/img/astrology.png"
            Title="Welcome" Height="450" Width="450">

    <fr:LoadingMask MainWindow="MainWindow" Padding="30">
        <Image Stretch="Fill" Source="pack://application:,,,/assets/img/astrology.png"/>
    </fr:LoadingMask>
</Window>